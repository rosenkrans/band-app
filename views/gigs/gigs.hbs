<a href="/bands/{{bandId}}">Back to Band Page</a>
<a href="/bands/{{bandId}}/gigs/create" class="btn btn-primary add-gig-btn">Add Gig</a>

<h1 class="band-name">{{band.bandName}}</h1>

<h2 class="text">Gig List</h2>
 
<table class="table text">
  <thead>
    <tr>
      <th scope="col" class="col-gig-name">Gig Name</th>  
      <th scope="col" class="col-gig-date">Gig Date</th>
      <th scope="col">Type of Performance</th>
      <th scope="col">Description</th>
      {{!-- <th scope="col">ID</th> --}}
    </tr>
  </thead>
  
  <tbody class="text">
    {{#each gigs}}

    <tr>      
        <td><a href="/bands/{{bandId}}/gigs/{{_id}}">{{gigName}}</a></td>
        <td><p>{{dateOfGig}}</p></td>
        <td><p>{{typeOfPerformance}}</p></td>
        <td><p>{{gigDescription}}</p></td>
        {{!-- <td><p>{{_id}}</p></td> --}}
    </tr>

    {{/each}}
  </tbody>

</table>









