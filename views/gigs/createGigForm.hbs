<a href="/bands/{{bandId}}/gigs">Back to Gig List</a>

<div class="create-gig-form">
<form method="POST" action="/bands/{{bandId}}/gigs">

  <div class="form-group">
    <label for="gigName" class="gigName">Gig Name</label>
      <input 
        type="text" 
        id="gigName" 
        {{!-- placeholder="Gig Name"  --}}
        name="gigName"
      />
  </div>

  <div class="form-group">
    <label for="imgLink" class="img-link">Gig Picture</label>
    <input 
      type="text" 
      id="img-link" 
      name="imgLink"      
    > 
  </div>

  <div class="form-group">
    <label for="dateOfGig">Date of Gig:</label>
      <input 
        type="date" 
        id="dateOfGig"
        {{!-- placeholder="Date of Gig" --}}
        name="dateOfGig"
        
      />
  </div>

  <div class="form-group">
    <label for="typeOfPerformance">Type of Performance:
      
    </label>
    <select name="typeOfPerformance">
      <option value="Parade">Parade</option>
      <option value="Festival">Festival</option>
      <option value="Wedding">Wedding</option>
      <option value="Birthday Party">Birthday Party</option>
    </select>
  </div>

  <div class="form-group">
    <label for="gigDescription">Gig Description:</label>
      <input 
        type="text" 
        id="gigDescription"
        name="gigDescription"
      />
  </div>

  <div class="form-group">
    <label for="photoCredit" class="photoCredit">Photo Credit</label>
      <input 
        type="text" 
        id="photoCredit" 
        name="photoCredit"
      />
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>

</div>

