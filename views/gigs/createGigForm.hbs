<a href="/gigs">Back to Gigs Page</a>

<form method="POST" action="/gigs">

  <div class="form-group">
    <label for="gigName" class="gigName">Gig Name</label>
      <input 
        type="text" 
        id="gigName" 
        {{!-- placeholder="Gig Name"  --}}
        name="gigName"
      />
  </div>

  <div class="form-group">
    <label for="dateOfGig">Date of Gig:</label>
      <input 
        type="date" 
        id="dateOfGig"
        {{!-- placeholder="Date of Gig" --}}
        name="dateOfGig"
        
      />
  </div>

  <div class="form-group">
    <label for="typeOfPerformance">Type of Performance:</label>
      <input 
        type="text" 
        id="typeOfPerformance"
        {{!-- placeholder="Type of Performance"  --}}
        name="typeOfPerformance"
      />
  </div>

  <div class="form-group">
    <label for="gigDescription">Gig Description:</label>
      <input 
        type="text" 
        id="gigDescription"
        {{!-- placeholder="Gig Description"  --}}
        name="gigDescription"
      />
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>



