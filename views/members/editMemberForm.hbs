<a href="/bands/{{bandId}}/members/{{member._id}}">Back to Members Page</a>
<form method="POST" action="/bands/{{bandId}}/members/{{member._id}}?_method=PUT">

  <div class="form-group">
    <label for="memberName" class="memberName">Member Name</label>
      <input 
        type="text" 
        id="memberName" 
        {{!-- placeholder="Member Name"  --}}
        name="memberName"
        value="{{member.memberName}}"
      />
  </div>

  <div class="form-group">
    <label for="memberEmail">Member Email:</label>
      <input 
        type="text" 
        id="memberEmail"
        {{!-- placeholder="Member Email"  --}}
        name="memberEmail"
        value="{{member.memberEmail}}"
      />
  </div>

    <div class="form-group">
    <label for="memberInstrument" class="memberInstrument">Instrument/s Played</label>
      <input 
        type="text" 
        id="memberInstrument" 
        name="memberInstrument"
        value="{{member.memberInstrument}}"
      />
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>
