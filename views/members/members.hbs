<a href="/bands/{{bandId}}">Back to Band Page</a>
<a href="/bands/{{bandId}}/members/create" class="btn btn-primary add-member-btn">Add Member</a>

<h1 class="band-name">{{band.bandName}}</h1>

<h2 class="text">Member List</h2>

<table class="table text">
  <thead>
    <tr>
      <th scope="col" class="col-member-name">Member Name</th>  
      <th scope="col" class="col-member-email">Member Email</th>
      <th scope="col" class="col-member-instrument">Member Instrument</th>
    </tr>
  </thead>

  <tbody class="text">
    {{#each members}}

    <tr>      
        <td><a href="/bands/{{bandId}}/members/{{_id}}">{{memberName}}</a></td>
        <td><p>{{memberEmail}}</p></td>
        <td><p>{{memberInstrument}}</p></td>
    </tr>

    {{/each}}
  </tbody>

</table>









